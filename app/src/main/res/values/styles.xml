<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>


    <style name="search_rec_price">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/search_blue</item>
        <item name="android:text">@string/sochi</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:fontFamily">@font/sfprodisplayregularitalic</item>
        <item name="android:layout_marginStart">231dp</item>
    </style>

    <style name="search_rec_timings">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/sochi</item>
        <item name="android:layout_width">257dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:fontFamily">@font/sfprodisplaysemibold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="search_rec_title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/sochi</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:fontFamily">@font/sfprodisplayregularitalic</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="search_rec_arrow">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/right_arrow</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>