<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/card"
        android:layout_width="132dp"
        android:layout_height="213.16dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:maxLines="1"
        android:id="@+id/rec_image"
        android:layout_width="132dp"
        android:layout_height="133.16dp"
        android:background="@drawable/search_rounded_icons"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"/>
    
    <TextView
        android:maxLines="1"
        android:id="@+id/rec_title"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/sochi"
        android:fontFamily="@font/sfprodisplaymedium"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="141.16dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"/>

    <TextView
        android:maxLines="1"
        android:id="@+id/rec_city"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/sochi"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="168.16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"/>

    <ImageView
        android:maxLines="1"
        android:id="@+id/plane"
        android:layout_width="17.06dp"
        android:layout_height="17.06dp"
        android:background="@drawable/plane_main"
        android:layout_marginBottom="3.94dp"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"/>

    <TextView
        android:maxLines="1"
        android:id="@+id/rec_price"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="@string/sochi"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/plane"
        app:layout_constraintBottom_toBottomOf="@id/plane"
        app:layout_constraintStart_toEndOf="@id/plane"/>


</androidx.constraintlayout.widget.ConstraintLayout>